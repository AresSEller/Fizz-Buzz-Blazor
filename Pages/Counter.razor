@page "/counter"

<h1>Counter</h1>

<h4>I have changed the code to increment the clicker program by different amounts and to target different elements</h4>

<p>Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>

<p>Current count: @currentCount2</p>

<button class="btn btn-primary" @onclick="IncrementCountBy2">Click me</button>

<p>Current count: @currentCount3</p>

<button class="btn btn-primary" @onclick="IncrementCountBy12">Click me</button>

@code {
    int currentCount = 0;

    void IncrementCount()
    {
        currentCount++;
    }

    int currentCount2 = 0;

    void IncrementCountBy2()
    {
        currentCount2 += 2;
    }

    int currentCount3 = 0;

    void IncrementCountBy12()
    {
        currentCount3 += 12;
    }
}
